. Gemeinsam werden die zu besprechenden Wissensgebiete abgesteckt. Dies könnten beispielsweise sein:","position":{"start":{"line":17,"column":1,"offset":2766},"end":{"line":17,"column":757,"offset":3522},"indent":[]}}],"position":{"start":{"line":17,"column":1,"offset":2766},"end":{"line":17,"column":757,"offset":3522},"indent":[]}},{"type":"list","ordered":false,"start":null,"spread":false,"children":[{"type":"listItem","spread":false,"checked":null,"children":[{"type":"paragraph","children":[{"type":"text","value":"Aufgaben inklusive deren Prozesse","position":{"start":{"line":19,"column":3,"offset":3528},"end":{"line":19,"column":36,"offset":3561},"indent":[]}}],"position":{"start":{"line":19,"column":3,"offset":3528},"end":{"line":19,"column":36,"offset":3561},"indent":[]}}],"position":{"start":{"line":19,"column":1,"offset":3526},"end":{"line":19,"column":36,"offset":3561},"indent":[]}},{"type":"listItem","spread":false,"checked":null,"children":[{"type":"paragraph","children":[{"type":"text","value":"Projekte mit deren Verläufen","position":{"start":{"line":20,"column":3,"offset":3565},"end":{"line":20,"column":31,"offset":3593},"indent":[]}}],"position":{"start":{"line":20,"column":3,"offset":3565},"end":{"line":20,"column":31,"offset":3593},"indent":[]}}],"position":{"start":{"line":20,"column":1,"offset":3563},"end":{"line":20,"column":31,"offset":3593},"indent":[]}},{"type":"listItem","spread":false,"checked":null,"children":[{"type":"paragraph","children":[{"type":"text","value":"Zeit-, Selbst- und Ideenmanagement","position":{"start":{"line":21,"column":3,"offset":3597},"end":{"line":21,"column":37,"offset":3631},"indent":[]}}],"position":{"start":{"line":21,"column":3,"offset":3597},"end":{"line":21,"column":37,"offset":3631},"indent":[]}}],"position":{"start":{"line":21,"column":1,"offset":3595},"end":{"line":21,"column":37,"offset":3631},"indent":[]}},{"type":"listItem","spread":false,"checked":null,"children":[{"type":"paragraph","children":[{"type":